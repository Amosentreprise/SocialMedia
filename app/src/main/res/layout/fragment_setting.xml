<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SettingFragment"
    android:background="@color/white">

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/langue_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/b_fragment_setting"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textSize="20sp"
            android:text="Langue"
            android:paddingHorizontal="30dp"
            android:drawablePadding="50dp"
            android:gravity="center_vertical"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:elevation="10dp"
            android:drawableStart="@drawable/ic_baseline_translate_24"/>

        <TextView
            android:id="@+id/mode_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/b_fragment_setting"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textSize="20sp"
            android:text="Mode sombre"
            android:gravity="center_vertical"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:paddingHorizontal="30dp"
            android:drawablePadding="50dp"
            android:drawableStart="@drawable/ic_baseline_highlight_24"
            android:elevation="10dp"/>
         <androidx.appcompat.widget.SwitchCompat
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="300dp"
             android:layout_marginTop="-55dp"
             android:elevation="10dp"
             />

        <TextView
            android:id="@+id/apropos_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/b_fragment_setting"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textSize="20sp"
            android:text="A propos"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:paddingHorizontal="30dp"
            android:drawablePadding="50dp"
            android:gravity="center_vertical"
            android:elevation="10dp"
            android:drawableStart="@drawable/ic_baseline_info_24"

            />


        <TextView
            android:id="@+id/deconnexion_text"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/b_fragment_setting"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="20sp"
            android:textSize="20sp"
            android:text="Deconnexion"
            android:paddingHorizontal="30dp"
            android:drawablePadding="50dp"
           android:gravity="center_vertical"
            android:textColorHint="@color/black"
            android:drawableStart="@drawable/ic_baseline_power_settings_new_24"
          android:elevation="10dp"
           />
    </LinearLayout>


</FrameLayout>